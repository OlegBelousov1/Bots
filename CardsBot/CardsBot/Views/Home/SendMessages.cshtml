@{
    ViewBag.Title = "SendMessages";
}

<h2>Рассылка</h2>

<form asp-action="SendMessages" asp-controller="Home" data-ajax="true" data-ajax-method="post" data-ajax-update="#result" enctype="multipart/form-data">
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleFormControlTextarea1">Текст сообщения</label>
                <textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
        </div><br><br>
        <div class="form-group">
            <div class="col-md-10">
                <label for="formGroupExampleInput">Картинка</label><br>
                <input type="file" name="photo">
            </div>
        </div><br><br>
        <input type="submit" class="btn-success" value="Отправить" />
    </div>
</form><br><br>
<div>
    <h3 id="result"></h3>
</div>

